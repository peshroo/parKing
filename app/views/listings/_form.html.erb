<%= form_for @listing, html: { :class => 'form-horizontal new_listing', multipart: true } do |f| %>

<% if @listing.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

    <ul>
    <% @listing.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  <p>
    <%= f.hidden_field :latitude %>
    <%= f.hidden_field :longitude %>
  </p>

  <div class="form-group">
    <%= f.label :name, nil, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10 ">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :image, "Photo", class: 'col-sm-2 control-label' %>
    <%= f.file_field :image, class: 'form-control-static' %>
  </div>

  <div class="form-group">
    <%= f.label :address, nil, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10 ">
      <%= f.text_field :address, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :details, nil, class: 'col-sm-2 control-label'%>
    <div class="col-sm-10 ">
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :price, class: 'col-sm-2 control-label'%>
    <div class="col-sm-10 ">
      <%= f.text_field :price, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :start, "Start Time", class: 'col-sm-2 control-label' %>
    <%= f.select :start, @array_of_full_times, prompt: "Start" %>
  </div>

  <div class="form-group">
    <%= f.label :end, "End Time" %>
    <%= f.select :end, @array_of_full_times, prompt: 'End' %>
  </div>

  <p>
    <%= f.submit %>
  </p>

<% end %>
