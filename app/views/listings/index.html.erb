<h1>♛ All listings ♛</h1>

<%= link_to 'New Listing', new_listing_path %>
<%= link_to 'Home', root_url %>

<% @listings.each do |listing| %>
  <div class="listing">
    <h3><%= link_to listing.name, listing %></h3>
    <p><%= image_tag(listing.image) %><br>
    Location: <%= listing.location %><br>
    Description: <%= listing.description %><br>
    Price: $<%= listing.price %>/hour<br>
    Rating: <%= listing.rating %><br>
    Available Time: <%= listing.start.strftime('%b %e, %l:%M %p') %> - <%= listing.end.strftime('%b %e, %l:%M %p') %></p>
  </div>
<% end %>
