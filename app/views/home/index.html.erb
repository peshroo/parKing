<h1>ParK-King</h1>
<% if current_user %>
  <h3>Aloha <%= @current_user.first_name %>!</h3>
  <%= link_to "Logout", sessions_path, method: :delete %>
<% else %>
  <a href="#" class="login_link">Login</a>
<% end %>
<a href="#" class="new_user_link">Register</a>
<a href="#">About</a>
<div class="Book">
  <a href="#">Book</a>
</div>
<div class="Rent">
  <a href="#">Rent</a>
</div>
<div class="new_user">
  <%= form_for @user do |f| %>
    <button type="button" class="close">x</button>
    <div class="field">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
        <%= f.label :last_name %><br>
        <%= f.text_field :last_name %>
    </div>

    <div class='field'>
      <%= f.label :email %><br>
      <%= f.email_field :email %>
    </div>

    <div class='field'>
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>

    <div class='field'>
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation %>
    </div>

    <%= f.submit 'Sign Up' %>

  <% end %>
</div>
<div class="login">


<%= form_for :sessions, url: sessions_path do |f| %>
  <button type="button" class="close">x</button>
  <div class='field'>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <div class='field'>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>

  <%= f.submit 'Login' %>

<% end %>
