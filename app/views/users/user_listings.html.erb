<section class="userlistingsimage">
  <div class="userlistingsheader">
    <i class="fa fa-list" aria-hidden="true"></i>
    Listings.
  </div>
</section>

<div class="userlistingsblankspace">
  
  <br><%= link_to "<span class='parkingsize'>n e w <span class='kingweight'>L i s t i n g</span></span>".html_safe, new_listing_path %>

  <div class="user_profile">
    <div class="profile_user_info">
      <h3><%= current_user.full_name %></h3>
      <p id="edit"><%= current_user.email %></p>
      <p>Wallet: $<%= current_user.wallet %></p>
    </div>
    <%= link_to "Edit Account", edit_user_form_path, class: 'edit_form_link', :remote => true %>
    <%= link_to "Delete this account", "/users/#{current_user.id}", method: :delete, data: {confirm: "Are you sure you want to delete your account? This will also delete any existing listings and bookings!"} %>
    <%= link_to "My Listings", show_user_listings_path, class: 'show_listings_link', remote: true %>
    <%= link_to "Booking History", show_user_bookings_path, class: 'show_bookings_link', remote: true %>
    <div class="user_partial">
      <%= render partial: 'listings' %>
    </div>
  </div>
  <div class="review_form">

  </div>
</div>
