<%= form_for @review, url: { controller: "reviews", action: "update" } do |f| %>
  <p>
    <%= f.label :comment %><br>
    <%= f.text_field :comment  %>
  </p>

  <p>
    <%= f.label :rating %><br>
    <%= f.number_field :rating %>
  </p>

  <p>
    <%= f.hidden_field :id, value: params[:review_id] %>
  </p>

  <p>
    <%= f.submit "Update"%>
  </p>

<% end %>
